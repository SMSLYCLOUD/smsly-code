# ============================================
# SMSLY Code â€” Environment Configuration
# ============================================
# Copy this to .env and fill in your values

# ---- Core ----
SMSLY_CODE_DOMAIN=localhost
SMSLY_CODE_SECRET_KEY=change-me-to-64-random-chars
SMSLY_CODE_RUN_MODE=development
SMSLY_CODE_PORT=8080
SMSLY_CODE_GIT_BASE_PATH=/data/git/repositories

# ---- Database (PostgreSQL 16) ----
DATABASE_URL=postgres://smslycode:smslycode@localhost:5432/smslycode?sslmode=disable
DATABASE_MAX_CONNS=25
DATABASE_MIN_CONNS=5

# ---- Redis 7 ----
REDIS_URL=redis://localhost:6379/0

# ---- Object Storage (MinIO) ----
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=smslycode
MINIO_USE_SSL=false

# ---- Search (Meilisearch) ----
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_API_KEY=change-me

# ---- SMSLY Identity (OAuth2/OIDC) ----
SMSLY_IDENTITY_URL=https://identity.smsly.io
SMSLY_IDENTITY_CLIENT_ID=smsly-code
SMSLY_IDENTITY_CLIENT_SECRET=change-me
SMSLY_IDENTITY_REDIRECT_URI=http://localhost:3000/auth/callback

# ---- SMSLY Gateway (SMS/Voice) ----
SMSLY_GATEWAY_URL=https://gateway.smsly.io
SMSLY_GATEWAY_API_KEY=change-me

# ---- SMSLY Hosting (Deploy Bridge) ----
SMSLY_HOSTING_URL=https://hosting.smsly.io
SMSLY_HOSTING_API_KEY=change-me

# ---- AI (Gemini) ----
GEMINI_API_KEY=change-me
GEMINI_MODEL=gemini-2.5-pro

# ---- MIP (Integrity Stamps) ----
MIP_SIGNING_KEY_PATH=./keys/mip-signing.key
MIP_VERIFY_KEY_PATH=./keys/mip-verify.key

# ---- Monitoring ----
PROMETHEUS_ENABLED=true
SENTRY_DSN=

# ---- Frontend ----
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws
NEXT_PUBLIC_APP_NAME=SMSLY Code
